---
export interface Props {
  year: string;
  title: string;
  blogURL?: string;
  sourceURL: string;
  description: string;
  demoURL?: string;
}

const { title, description, year, blogURL, sourceURL, demoURL } = Astro.props;
---

<div class="flex flex-col gap-2">
  <a
    href={sourceURL}
    class="text-lg font-medium text-skin-accent decoration-dashed underline-offset-4 focus-visible:no-underline focus-visible:underline-offset-0"
  >
    <h3 class="text-lg font-medium decoration-dashed hover:underline">
      {title}
    </h3>
  </a>
  <div class="flex items-center gap-2">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      class={`scale-90 inline-block h-6 w-6 min-w-[1.375rem] fill-skin-base`}
      aria-hidden="true"
    >
      <path
        d="M7 11h2v2H7zm0 4h2v2H7zm4-4h2v2h-2zm0 4h2v2h-2zm4-4h2v2h-2zm0 4h2v2h-2z"
      ></path>
      <path
        d="M5 22h14c1.103 0 2-.897 2-2V6c0-1.103-.897-2-2-2h-2V2h-2v2H9V2H7v2H5c-1.103 0-2 .897-2 2v14c0 1.103.897 2 2 2zM19 8l.001 12H5V8h14z"
      ></path>
    </svg>
    <time>{year}</time>
  </div>
  <p>{description}</p>
</div>
